{
  "name": "demo_fast_corpus",
  "description": "Configuration de test rapide pour validation du pipeline",
  "version": "1.0.0",
  "purpose": "demo_testing",
  "target_total_tokens": 100000,
  "datasets_count": 2,

  "deduplication": {
    "threshold": 0.8,
    "num_perm": 64
  },

  "training_params": {
    "train_ratio": 0.95,
    "shard_tokens": 500000,
    "sequence_length": 512,
    "vocab_size": 8192,
    "tokenizer_path": "data/tokenizer/demo"
  },

  "sources": {
    "tinystories_demo": {
      "type": "huggingface",
      "dataset_name": "roneneldan/TinyStories",
      "subset": null,
      "split": "train",
      "text_keys": "text",
      "token_budget": 60000,
      "weight": 0.6,
      "description": "TinyStories - Small dataset for quick testing",
      "analysis_sample_size": 50,
      "chars_per_token": 4.0,
      "margin_ratio": 0.02,
      "trust_remote_code": false,
      "min_length": 100,
      "max_length": 2000,
      "require_english": true
    },

    "wikitext2_demo": {
      "type": "huggingface",
      "dataset_name": "wikitext",
      "subset": "wikitext-2-raw-v1",
      "split": "train",
      "text_keys": "text",
      "token_budget": 40000,
      "weight": 0.4,
      "description": "WikiText-2 - Compact Wikipedia for testing",
      "analysis_sample_size": 30,
      "chars_per_token": 4.0,
      "margin_ratio": 0.02,
      "trust_remote_code": false,
      "min_length": 20,
      "max_length": 2000,
      "require_english": true
    }
  }
}