{
  "name": "oasst1_chatml",
  "description": "OASST1 dataset avec template ChatML (équivalent ancien setup)",
  "version": "1.0",
  "template": "chatml",

  "output_params": {
    "sequence_length": 1024,
    "shard_size": 1000,
    "train_ratio": 0.98
  },

  "quality_filters": {
    "min_prompt_length": 10,
    "max_prompt_length": 2000,
    "min_response_length": 15,
    "max_response_length": 2000,
    "filter_urls": true,
    "filter_code_blocks": false,
    "require_ascii": false
  },

  "datasets": [
    {
      "name": "openassistant_v1",
      "type": "huggingface",
      "dataset_name": "OpenAssistant/oasst1",
      "subset": null,
      "split": "train",
      "streaming": false,
      "max_samples": null,
      "text_fields": {
        "prompt": "text",
        "response": "text"
      },
      "weight": 1.0,
      "description": "OpenAssistant OASST1 - Correspondant à data/sft/oasst1_en.jsonl",
      "custom_processing": {
        "conversation_tree": true,
        "filter_language": "en",
        "min_score": 2,
        "role_filter": ["prompter", "assistant"]
      }
    }
  ],

  "processing_metadata": {
    "target_conversations": 20000,
    "estimated_tokens": 15000000,
    "processing_time_estimate": "30 minutes",
    "quality_focus": "conversational_quality",
    "template_rationale": "ChatML pour correspondance exacte avec ancien setup"
  }
}