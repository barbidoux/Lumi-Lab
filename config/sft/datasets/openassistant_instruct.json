{
  "name": "openassistant_instruct",
  "description": "OpenAssistant conversations with Instruct template",
  "version": "1.0",
  "template": "instruct",

  "output_params": {
    "sequence_length": 1024,
    "shard_size": 1000,
    "train_ratio": 0.95,
    "enable_packing": true
  },

  "quality_filters": {
    "min_prompt_length": 15,
    "max_prompt_length": 1500,
    "min_response_length": 20,
    "max_response_length": 2000,
    "filter_urls": true,
    "filter_code_blocks": false,
    "require_ascii": false
  },

  "datasets": [
    {
      "name": "oasst1",
      "type": "huggingface",
      "dataset_name": "OpenAssistant/oasst1",
      "subset": null,
      "split": "train",
      "streaming": false,
      "max_samples": 30000,
      "text_fields": {
        "prompt": "text",
        "response": "text"
      },
      "weight": 1.0,
      "description": "High-quality human-generated conversations",
      "custom_processing": {
        "conversation_tree": true,
        "filter_language": "en",
        "min_score": 3
      }
    }
  ],

  "processing_metadata": {
    "target_conversations": 25000,
    "estimated_tokens": 15000000,
    "processing_time_estimate": "20 minutes"
  }
}